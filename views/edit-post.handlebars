<div class="col-lg-12">
  <div class="card-body py-5 px-md-5">
    <form data-id={{post.id}} class="card-body post-list">   
      <h4>Edit Post</h4>
        <br>
        <div class="form-group">
          <textarea class="form-input w-100 p-1" type="text" id="post-title" rows="1" placeholder="Enter Title for Post" name="post-title">{{post.title}}</textarea>
        </div>
        <div class="form-group">
          <textarea class="form-input w-100 p-1"  id="post-content" rows="12" placeholder="Write Something..." name="post-desc">{{post.content}}</textarea>
        </div>
        <div class="form-group">   
          <a class="btn btn-danger" href="/">Delete</a>       
          <button type="submit" class="btn btn-primary btn-post">Update</button> 
          {{!-- <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
          </div> --}}
      </form>
      </div>
    </form>
  </div>
</div>
<script src="js/edit-post.js"></script>
