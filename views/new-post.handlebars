<div class="col-lg-12">
  <div class="card-body py-5 px-md-5">
    <form class="card-body">   
      <h4>Create a New Post</h4>
        <br>
        <div class="form-group">
          <textarea class="form-input w-100 p-1" type="text" id="post-title" rows="1" placeholder="Enter Title for Post" name="post-title"></textarea>
        </div>
        <div class="form-group">
          <textarea class="form-input w-100 p-1"  id="post-content" rows="12" placeholder="Write Something..." name="post-desc"></textarea>
        </div>
        <div class="form-group">   
          <a class="btn btn-secondary" href="/">Cancel</a>       
          <button type="submit" class="btn btn-primary btn-post">Post</button> 
      </form>
      </div>

