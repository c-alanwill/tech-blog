{{#if loggedIn}}
  <!-- Create a post button -->
  <div class="feed p-2">
    <a class="btn btn-primary btn-sm" id="createBtn" href="/dashboard">New Post</a>
    {{/if}}
  </div>

{{#each posts as |post|}}

<div class="card">
  <div class="card-body">
    <a href="/post/{{post.id}}"><h5 class="card-title">{{post.title}}</h5></a>
    <h6 class="card-subtitle mb-2 text-muted">Posted by {{post.user.username}} {{post.createdAt}}</h6>
    <p class="card-text">{{post.content}}</p>
    {{!-- <a href="/post/{{post.id}}" class="card-link">Post link</a> --}}
  </div>
</div>
{{/each}}